{
    "version": 2,
    "builds": [
      {
        "src": "backend/*.go",
        "use": "@vercel/go"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/main" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  